{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["express"],  // Incluye las definiciones de tipo de Express
    "outDir": "./dist/src"  
  },
  "include": [
    "src/**/*",          // Incluye todo el contenido de src
    "src/types/**/*"      // Incluye la carpeta de types personalizada dentro de src
  ],
  "exclude": [
    "node_modules",      // Excluye node_modules
    "**/*.spec.ts"       // Excluye archivos de test espec√≠ficos
  ]
}
